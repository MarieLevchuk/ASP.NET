<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header class="header">
        <div class="container">
            <div class="header_logo">

                <p>Hello @Context.Request.Cookies["name"]</p>
                <h1>Logo</h1>
            </div>

            <nav class="nav">
                <a class="nav_link" href="~/Home/Index">Home</a>
                <a class="nav_link" href="~/Home/Contacts">Contacts</a>
                <a class="nav_link" href="~/Home/About">About</a>
            </nav>
        </div><!--end container-->
